<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>AltaProductoServlet</servlet-name>
  	<display-name>AltaProductoServlet</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.AltaProductoServlet</servlet-class>
  	<load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
  	<servlet-name>login</servlet-name>
  	<display-name>login</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.LoginServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
  	<servlet-name>comprar</servlet-name>
  	<display-name>comprar</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.ComprasServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>lista</servlet-name>
  	<display-name>lista</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.ListaProductosServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AltaProductoServlet</servlet-name>
  	<url-pattern>/altaProducto</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AltaProductoServlet</servlet-name>
  	<url-pattern>/zzz</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>comprar</servlet-name>
  	<url-pattern>/comprar</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>lista</servlet-name>
  	<url-pattern>/lista</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
